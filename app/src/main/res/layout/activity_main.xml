<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kimberlycanedo.tipcalculator.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bill"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <EditText
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:id="@+id/numOfPeople"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/tipPerPerson" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/tipPerPerson" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tpperson"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:text="Tip per person:"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvper"
        android:text="Total per person:"
        android:layout_below="@+id/tpperson"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/tipPerPerson"
        android:layout_alignTop="@+id/tpperson"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/totalPerPerson"
        android:layout_alignTop="@+id/Tvper"
        android:layout_alignStart="@+id/tipPerPerson" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number of people"
        android:id="@+id/textView2"
        android:layout_below="@+id/bill"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kim"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true" />

</RelativeLayout>
